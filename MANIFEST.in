prune .github

# Root
exclude .bandit
exclude .flake8
exclude .gitignore
exclude .isort.cfg
exclude .pre-commit-config.yaml
exclude CONTRIBUTING.md
include LICENSE.txt
exclude MANIFEST.in
include pyproject.toml
include README.md
include setup.cfg
include setup.py

# Core
include eigency/*.h
include eigency/*.py
include eigency/*.pyd
include eigency/*.pyx
include eigency/*.cpp

# Eigen library
prune eigency/eigen_3.2.8
graft eigency/eigen_3.2.8/Eigen
include eigency/eigen_3.2.8/COPYING*
recursive-exclude eigency/eigen_3.2.8/Eigen CMakeLists.txt

# Tests
prune tests
